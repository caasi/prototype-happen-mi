@import 'nib'

global-reset()

col-count = 6
row-count = 3

html, body, #container, #pics
  height 100%

body
  position relative
  background #16161D

#pics
  li
    float left
    width  (100 / col-count)%
    height (100 / row-count)%

    a.people
      display block
      outline none
      background-position center top
      background-size cover
      width  100%
      height 100%

// costum sematic ui
#menu
  position fixed
  width 100%
  bottom 0
  margin 0

// fix height calculating problem
#modal
  top    0
  margin-top 1em !important
